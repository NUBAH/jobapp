<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<% if user.userable == employee %>
				<%= form_for(@user) do |f| %>
					<table class="table">
						<tbody>
							<tr>
								<td><%= f.label :名前 %></td>
								<td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "山田太郎", class: "form_control" %></td>
							</tr>
							<tr>
								<td><%= f.label :名前（カナ） %></td>
								<td><%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", placeholder: "ヤマダタロウ", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :電話番号 %></td>
								<td><%= f.text_field :tell, autofocus: true, autocomplete: "tell", placeholder: "01234567890 ハイフン無しで入力", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :メールアドレス %></td>
								<td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxxx@xxxx.com", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :生年月日 %></td>
								<td><%= f.text_area :birthday, autofocus: true, autocomplete: "birthday", placeholder: "20000101 ハイフン無しで入力", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :自己紹介文 %></td>
								<td><%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", placeholder: "最大文字数200字まで", class: "form-control" %></td>
							</tr>
						</tbody>
					</table>
				<% end %>
			<% elsif user.userable == company %>
				<%= form_for(@user) do |f| %>
					<table class="table">
						<tbody>
							<tr>
								<td><%= f.label :名前 %></td>
								<td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "◯◯レストラン◯◯店", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :名前（カナ） %></td>
								<td><%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", placeholder: "◯◯レストラン◯◯テン", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :電話番号 %></td>
								<td><%= f.text_field :tell, autofocus: true, autocomplete: "tell", placeholder: "01234567890 ハイフン無しで入力", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :メールアドレス %></td>
								<td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxxx@xxxx.com", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :郵便番号 %></td>
								<td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "0123456 ハイフン無しで入力", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :住所 %></td>
								<td><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都xx区xxx0丁目000-00 xxxxxxx00号", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :場所 %></td>
								<td><%= f.text_field :location, autofocus: true, autocomplete: "location", placeholder: "何駅から徒歩◯◯分", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :写真 %></td>
								<td><%= f.attachment_field :image %></td>
							</tr>
							<tr>
								<td><%= f.label :給与 %></td>
								<td><%= f.text_field :salary, autofocus: true, autocomplete: "salary", placeholder: "時給◯◯円", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :条件 %></td>
								<td><%= f.text_field :condition, autofocus: true, autocomplete: "condition", placeholder: "週休２日", class: "form-control" %></td>
							</tr>
							<tr>
								<td><%= f.label :求人数 %></td>
								<td><%= f.number_field :offering, autofocus: true, autocomplete: "offering" %>人</td>
							</tr>
							<tr>
								<td><%= f.label :求職者に公開非公開? %></td>
								<td><%= f.select :status, [["公開", "release"], ["非公開", "nonrelease"]] %></td>
							</tr>
						</tbody>
					</table>
				<% end %>
			<% end %>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
