<div class="container">
  <div class="row">
    <%= devise_error_messages! %>
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "山田太郎", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :名前（カナ） %><br />
          <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", placeholder: "ヤマダタロウ", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :生年月日 %><br />
          <div>
            <%= raw sprintf(f.date_select(
                              :birthday,
                              use_month_numbers: true,
                              start_year:        1918,
                              end_year:          (Time.now.year),
                              default:           Date.new(1989, 1, 1),
                              date_separator: '%s'), '年', '月') + '日' %>
          </div>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規会員登録", class: "btn btn-success form-control" %>
        </div>
      <% end %>

      <%= render "employees/shared/links" %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
